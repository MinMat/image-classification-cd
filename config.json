{
    "name": "image_classification",
    "n_gpu": 1,

    "arch": {
        "type": "ImageClassificationModel",
        "args": {}
    },
    
    "data_loader": {
        "type": "ImageDataLoader",
        "args":{
            "data_dir": "data/IMG/training_set",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 3
        }
    },  
    "predict_data_loader": {
        "type": "ImageDataLoaderPredict",
        "args":{
            "data_dir": "data/IMG/training_set",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 3
        }
    },
    
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 50,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false
    }
}
